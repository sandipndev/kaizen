{
  "name": "kaizen-extension",
  "displayName": "Kaizen",
  "version": "0.0.1",
  "description": "Focus that follows you",
  "author": "sandipndev <hey@sandipan.dev>, neilblaze <putubanerjee23@gmail.com>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "@kaizen/ui": "workspace:*",
    "framer-motion": "^12.26.2",
    "lucide-react": "^0.562.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.7.0",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "prettier": "3.7.4",
    "tailwindcss": "^3.4.17",
    "typescript": "5.9.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "http://*/*",
      "http://localhost:60091/*",
      "http://localhost:60092/*"
    ],
    "permissions": [
      "tabs",
      "storage",
      "sidePanel"
    ],
    "side_panel": {
      "default_path": "sidepanel.html"
    }
  }
}
